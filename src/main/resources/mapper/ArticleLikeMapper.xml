<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.bigzuoye.mapper.ArticleLikeMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO likes (article_id, user_id)
        VALUES (#{articleId}, #{userId})
    </insert>

    <delete id="delete">
        DELETE FROM likes
        WHERE article_id = #{articleId}
        AND user_id = #{userId}
    </delete>

    <select id="find" resultType="org.example.bigzuoye.entity.ArticleLike">
        SELECT *
        FROM likes
        WHERE article_id = #{articleId}
        AND user_id = #{userId}
    </select>

    <select id="countByArticleId" resultType="int">
        SELECT COUNT(*)
        FROM likes
        WHERE article_id = #{articleId}
    </select>


</mapper>
